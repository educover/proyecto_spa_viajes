<div class="row">
        <div class="col-12">
             <div class="botAdmin">
            <b>Bienvenido al area de administracion</b><br/>
            Desde aqui podras crear usuarios o gestionar ya existentes.
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            </div>
            <div class="col-6">
            <table class="table">
                <thead>
                     <tr>
      <th scope="col">ID</th>
      <th scope="col">Usuario</th>
      <th scope="col">Active</th>
      <th scope="col">Email</th>
      <th scope="col">Administrador</th>
    
      
    </tr>
  </thead>
  <tbody>
    
    {{#each users}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{username}}</td>
      <td>  <div class="input-group-prepend">
            <div class="input-group-text">
            <input type="checkbox" class="miCheckActive" id="{{id}}" {{#if active}} checked {{/if}}aria-label="Checkbox for following text input">
            </div>
            </div>
      </td>
      <td>{{email}}</td>
      <td><div class="input-group-prepend">
            <div class="input-group-text">
            <input type="checkbox" class="miCheckBoxAdmin" name="{{id}}" {{#if admin}} checked {{/if}}aria-label="Checkbox for following text input">
            </div>
            </div>
        </td>
        <td>
            <i onclick="eliminaUsuario({{id}})" class="fas fa-trash-alt"></i>   
        </td>
        <td>
            <i onclick="enviaMail({{email}})" class="far fa-envelope"></i>
        </td>
    </tr>
    {{/each}}

    
   
  </tbody>
</table>
</div>
<div class="col-3">
    <div class="mailer"></div>
    <textarea rows="4" cols="30" type="text" class="text-hidden"></textarea>
    </div>
        </div>
    </div>

    


    <nav arial-label="Page navigation example">
        <ul class="pagination">
            {{#with paginate}}
                {{#if hasPreviousPages}}
                    <li class="page-item prev">
                        <a class="page-link" href="{{prev_link this}}">Anterior</a>
                    </li>
                {{/if}}
            {{/with}}
            {{#each links}}
                <li class="page-item {{is_active @index ../currentPage}}">
                    <a class="page-link" href="{{url}}">{{number}}</a>
                </li>
            {{/each}}
            {{#with paginate}}
            {{#has_next_links ../pageCount this}}
                <li class="page-item next">
                    <a class="page-link" href="{{next_link ../this}}">Siguiente</a>
                </li>
            {{/has_next_links}}
            {{/with}}
        </ul>
    </nav>
    <div class="botAdmin">
      <form action="/admin/anadir" method="post">
    <button type="submit" class="btn btn-primary">Añadir</button>
    </form>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#recuperarContraseña1">
  Subir imagenes
</button>
     <div class="modal fade" id="recuperarContraseña1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
               <div class="modal-dialog" role="document">
                   <div class="modal-content">
                       <form action="/admin/upload" method="post" enctype="multipart/form-data" role="form">
                           <div class="modal-header">
                               <h5 class="modal-title" id="exampleModalLabel"><i class="fas fa-unlock-alt"></i> Subir imagenes</h5>
                               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                   <span aria-hidden="true">&times;</span>
                               </button>
                           </div>
                           <label>Busca tu imagen</label>         
                            <input type="file" name="file"  class="form-control">
                           <div class="modal-footer">
                               <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                               <button type="submit" class="btn btn-primary">Enviar</button>
                           </div>
                       </form>
                   </div>
               </div>
           </div>
  
    </div>
    
    
    